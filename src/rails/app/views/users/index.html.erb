<h1>Listing users</h1>

<table>
  <tr>
    <th>Username</th>
    <th>Email</th>
    <th>Role</th>
    <th>Manipulace</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <td><%= user.email %></td>
    <td><%= user.role != nil ? user.role.name : "---" %></td>
    <td><%
      concat link_to "Detail", user_path(user)
      render_edit_button(user, ' | ', nil)
      render_destroy_button(user, ' | ', nil)
    %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New User', new_user_path %>
