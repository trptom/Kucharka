<div class="span8 offset2">
  <div class="well">
    <h2>Registrace</h2>

    <%= form_for(@user) do |f| %>
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <div class="row-fluid spacer">
        <div class="span5">
          <legend>Povinné údaje</legend>
          <label>Uživatelské jméno</label>
          <%= f.text_field :username %>
          <label>E-mail adresa</label>
          <%= f.email_field :email %>
          <label>Heslo</label>
          <%= f.password_field :password %>
          <label>Potvr. heslo</label>
          <%= f.password_field :password_confirmation %>
        </div>
        <div class="span5 offset2">
          <legend>Další údaje</legend>
          <label>Jméno</label>
          <%= f.text_field :first_name %>
          <label>Příjmení</label>
          <%= f.text_field :second_name %>
          <label>Věk</label>
          <%= f.number_field :age, :min => 1, :max => 100 %>
          <%= f.submit "Registrovat", :class => "btn btn-large spacer btn-primary" %>
          <%#*<a class="btn btn-large spacer btn-primary" href="#">Registrovat</a>%>
        </div>
      </div>
    <% end %>
  </div>
</div>