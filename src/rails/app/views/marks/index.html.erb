<h1>Listing marks</h1>

<table>
  <tr>
    <th>Recipe</th>
    <th>User</th>
    <th>Value</th>
    <th>Note</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @marks.each do |mark| %>
  <tr>
    <td><%= mark.recipe %></td>
    <td><%= mark.user %></td>
    <td><%= mark.value %></td>
    <td><%= mark.note %></td>
    <td><%= link_to 'Show', mark %></td>
    <td><%= link_to 'Edit', edit_mark_path(mark) %></td>
    <td><%= link_to 'Destroy', mark, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

