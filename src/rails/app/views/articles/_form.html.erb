<%= form_for(@article) do |f| %>
  <%= render "layouts/errors" %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :annotation %><br />
    <%= f.text_area :annotation %>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </div>
  <div class="actions">
    <%= f.submit 'Nastavit', :class => "btn" %>
  </div>
<% end %>
