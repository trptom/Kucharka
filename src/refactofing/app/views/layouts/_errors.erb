<% if @errors && @errors.any? %>
  <% @errors.each do |msg| %>
    <div class="alert alert-error"> <!--defaultne hidden="hidden"; pokud se to neda resit timhle zpusobem, udelam jinak-->
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>Chyba!</strong>
        <% @errors[msg].each do |content| %>
          <br /><%= content %>
        <%  end %>
    </div>
  <% end %>
<% end %>