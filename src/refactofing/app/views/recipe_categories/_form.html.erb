<script type="text/javascript" src="<%= asset_path "pages/recipe_categories_form.js" %>"></script>

<%= form_for(@recipe_category, :html => { :onsubmit => "return Validator.validate({ group: \"recipe_category_form\", showMessage: false })" }) do |f| %>
  <%= render "layouts/errors" %>

  <label>Název</label>
  <%= f.text_field :name %>
  <label>Popis</label>
  <%= f.text_area :description, :class => "input-block-level", :rows => "6" %>
  <%= f.submit :value => "Vytvořit", :class => "btn" %>
<% end %>
