<div class="well">
  <h2>Výsledky hledání</h2>
  <% if @recipes != nil %>
    <% @recipes.each do |recipe| %>
      <div class="spacer">
        <%= get_thumb_icon(recipe) %>
        <h5>
          <%= recipe.name %>
          <% if @badges && @badges[recipe.id] %>
            <span class="badge <%= @badges[recipe.id]['class'] %>"><%= @badges[recipe.id]['title'] %></span>
          <% end %>-
          <%= link_to recipe.user.username, user_path(recipe.user) %> -
          <%= recipe.created_at %>
        </h5>
        <p><%= recipe.annotation %></p>
        <%= link_to "Dále >>", recipe_path(recipe.id) %>
      </div>
    <% end %>
  <% end %>
</div>