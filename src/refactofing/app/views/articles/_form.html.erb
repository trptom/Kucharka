<script type="text/javascript" src="<%= asset_path "pages/articles_form.js" %>"></script>

<%= form_for(@article, :html => { :onsubmit => "return Validator.validate({ group: \"article_form\", showMessage: false })" }) do |f| %>
  <%= render "layouts/errors" %>

  <div class="row-fluid spacer">
    <label><strong>Název</strong></label>
    <%= f.text_field :title, :class => "text4" %>
    <label>Stručný popis</label>
    <%= f.text_area :annotation, :rows => 5, :class => "input-block-level" %>
    <label>Obsah</label>
    <%= f.text_area :content, :rows => 5, :class => "input-block-level" %>
    <div class="btn-group spacer">
      <%= f.submit 'Nastavit', :class => "btn" %>
    </div>
  </div>
<% end %>